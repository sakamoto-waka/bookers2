<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1,maximum-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <%= link_to 'Bookers', '/', class: "navbar-brand" %>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav ml-auto">
              <% if user_signed_in? %>
              <li class="nav-item">
                  <%= link_to user_path(current_user), class: 'nav-link text-light' do %>
                    <i class="fa-solid fa-house-chimney"></i>Home
                  <% end %>
                </li>
                <li class="nav-item">
                  <%= link_to 'Users', users_path, class: 'nav-link text-light'  %>
                </li>
                <li class="nav-item">
                  <%= link_to 'Books', books_path, class: 'nav-link text-light'  %>
                </li>
                <li class="nav-item">
                  <%= link_to 'Log out', destroy_user_session_path, method: :delete, class: 'nav-link text-light'  %>
                </li>
              <% else %>
                <li class="nav-item">
                  <%= link_to 'Home', '/', class: 'nav-link text-light' %>
                </li>
                <li class="nav-item">
                  <%= link_to 'About', home_about_path, class: 'nav-link text-light' %>
                </li>
                <li class="nav-item">
                  <%= link_to 'Sign up', new_user_registration_path, class: 'nav-link text-light' %>
                </li>
                <li class="nav-item">
                  <%= link_to 'Sign in', new_user_session_path, class: 'nav-link text-light' %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>

    <%= yield %>

    <footer>

    </footer>
  </body>
</html>

<div class="container px-5 px-sm-0">
  <div class="row">

    <%= render 'books/left_side', book: Book.new, user: current_user %>

    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table table-hover">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <% @users.each do |user| %>
          <tbody>
            <tr>
              <td>
                <%= link_to user_path(user) do %>
                  <%= image_tag user.get_profile_image(50, 50) %></td>
                <% end %>
              <td><%= user.name %></td>
              <td></td>
              <td><%= link_to 'Show', user_path(user) %></td>
            </tr>
          </tbody>
        <% end %>
      </table>

  </div>
</div>